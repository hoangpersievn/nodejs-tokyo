extends ../layouts/common.pug
block listUser
    h1 list users   
    a(href="/user/create", class="btn btn-primary mb-3") add
    form(action='/user/search', method="GET")
        input(type="text", class="form-control", name="q")
        button(class="btn btn-danger mt-3") search
    ul(class="list-group")
        each user in users
            li(class="list-group-item")
                span= user.name
                span &nbsp;
                a(href='/user/' + user.id, class="btn btn-primary ml-3") view