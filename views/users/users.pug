extends ../layouts/common.pug
block listUser

    form(action='/user/search', method="GET")
        div(class="form-group row")
            div(class="col-md-4")
                input(type="text", class="form-control", name="q")
            div(class="col-md-2")
                button(class="btn btn-danger") search

    table(class="table")
        tr
            th Name
            th(colspan="2") Nick name
        each user in users
            tr
                td= user.name
                td= user.nick
                td
                    a(href='/user/' + user.id, class="btn btn-primary ml-3") view